+= 17;				//><query xmlns="">	len += msXMLNS.size();	len += 13;				//</query></iq>	//this function returns the size of the actual data, which doesn't include the null	//byte, done on purpose		return len;}#pragma mark -void AgentsMsg::visitQueryNode( const CElementNode& aNode ){	if( aNode.GetName() == "agent" )		mAgentsList.push_back( Agent( aNode ) );	else		BaseIQMsg::visitQueryNode( aNode );}#if USE_MACJLIB_NS}#endif